<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<!--here we are mapping  Game table with Game Card in model impl    -->
<hibernate-mapping>
    <class name="de.htwg.se.setgame.util.persistence.Pojo.GamePojo" table="GAME">
        <id name="id" type="int" column="GAME_ID">
            <generator class="native"/>
        </id>
        <one-to-one name="player" class="de.htwg.se.setgame.util.persistence.Pojo.PlayerPojo"
                    cascade="save-update"></one-to-one>
        <one-to-one name="cardList" class="de.htwg.se.setgame.util.persistence.Pojo.CardPojo"
                    cascade="save-update"></one-to-one>
    </class>
</hibernate-mapping>