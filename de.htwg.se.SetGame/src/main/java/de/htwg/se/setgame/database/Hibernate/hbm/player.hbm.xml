<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="de.htwg.se.setgame.database.Pojo.PlayerPojo" table="PLAYER">
        <meta attribute="class-description">
            This class contains the Player detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="playerName" column="PLAYER_NAME" type="string"/>
        <property name="score" column="PLAYER_SCORE" type="int"/>
    </class>
</hibernate-mapping>